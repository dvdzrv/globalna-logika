          {
            "fields": [
              {
                "options": {
                  "list": [
                    {
                      "title": "Tiktok",
                      "value": "tiktok"
                    },
                    {
                      "title": "Discord",
                      "value": "discord"
                    }
                  ]
                },
                "validation": [
                  {
                    "rules": [
                      {
                        "flag": "valid",
                        "constraint": [
                          "tiktok",
                          "discord"
                        ]
                      },
                      {
                        "flag": "presence",
                        "constraint": "required"
                      }
                    ],
                    "level": "error"
                  }
                ],
                "description": "Links to your social platforms",
                "name": "platform",
                "type": "string"
